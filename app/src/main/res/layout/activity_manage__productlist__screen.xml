<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Manage_Productlist_Screen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clothestvid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Clothes"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="#EBEBEB"/>
        <TextView
            android:id="@+id/electronicstvid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Electronics"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="#555555"/>
        <TextView
            android:id="@+id/groceriestvid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Groceries"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="#EBEBEB"/>

        <TextView
            android:id="@+id/shoestvid"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Shoes"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:background="#EBEBEB"
            android:visibility="gone"/>




    </LinearLayout>

    </ScrollView>

    <EditText
        android:id="@+id/edittextsearchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:queryHint="Search for a category"
        android:background="#EBEBEB"
        android:gravity="center"
        android:textSize="12sp"
        android:hint="Search for a category, Brand or category"
        android:layout_margin="5dp"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EBEBEB">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/titleline"
        android:layout_margin="10dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EBEBEB">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reportdetails_fwd_nextscreen_hdlss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </LinearLayout>



    </ScrollView>

</LinearLayout>