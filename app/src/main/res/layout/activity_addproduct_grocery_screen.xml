<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgdark"
    tools:context=".AddproductGrocery_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bgcardwhite">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product id :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Description :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Currency Type :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Category :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:id="@+id/addproductdetaileditname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unit Measure :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Brand :"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manufacturer :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SKU(Seller SKU) :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MRP(Max Retail Price) :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:id="@+id/addproductdetaileditsku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Available Quantity :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:id="@+id/addproductdetaileditmrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=""
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Units in Stock :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:id="@+id/addproductdetaileditprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Expiration Type :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:id="@+id/productdetaileditavailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shelf Life(in days) :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Main Image URl :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Image  :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Image  :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Image  :"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:textColor="#AEACAC" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inputboxgrey"
                    android:hint=" "
                    android:textSize="15sp"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>





                <androidx.cardview.widget.CardView
                    android:id="@+id/updateproductdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:background="#555555"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#555555">

                    <TextView
                        android:id="@+id/savelisting_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:gravity="center"/>




                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/signnewsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:background="#555555"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#C53D11"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/signnewsctv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="test btn"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:gravity="center"/>




                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </ScrollView>



    </LinearLayout>


</LinearLayout>