<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgdark"
    tools:context=".MainActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.8"
      android:layout_gravity="center"
      android:gravity="center">

      <ImageView
          android:layout_width="100dp"
          android:layout_height="80dp"
          android:src="@drawable/antsshopeelogo"
          android:layout_gravity="center"/>



  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1">




          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:padding="5dp"
              android:layout_margin="10dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/seller_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                android:paddingTop="0dp"
                android:paddingBottom="10dp"
                app:cardCornerRadius="5dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">



                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    android:src="@drawable/seller_icon"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >



                  <ImageView
                      android:layout_width="0dp"
                      android:layout_height="20dp"
                      android:layout_weight="0.5"
                      android:layout_marginTop="15dp"
                      android:src="@drawable/arwright"
                      />

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="3"
                      android:padding="10dp"
                      android:layout_marginRight="10dp"
                      android:text="Seller"
                      android:textColor="#F26628"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:gravity="center_horizontal"/>




                </LinearLayout>




              </LinearLayout>



            </androidx.cardview.widget.CardView>

          </LinearLayout>

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1">




          </LinearLayout>

        </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="5dp"
            android:layout_margin="10dp">


          <androidx.cardview.widget.CardView
              android:id="@+id/user_card"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:background="#fff"
              android:layout_margin="5dp"
              app:cardElevation="5dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



              <ImageView
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:padding="10dp"
                  android:src="@drawable/user_icon"
                  android:layout_gravity="center"/>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >



                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/arwright"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="10dp"
                    android:layout_marginRight="15dp"
                    android:text="User"
                    android:textColor="#C53D11"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>




              </LinearLayout>




            </LinearLayout>



          </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">




        </LinearLayout>

      </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Powered by ANTS"
          android:textColor="#EAEAEA"
          android:gravity="center"/>




    </LinearLayout>

</LinearLayout>